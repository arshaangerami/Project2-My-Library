<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <%-  include('navbar') %> 

    <div class="d-flex align-content-center flex-wrap justify-content-around" style="margin: 20px;"></div>

        <div class="card" style="width: 18rem;margin: 10px">
            <img class="card-img-top" src=<%= '/booksimg/' + book.image.name %>  alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Title: <%= book.title %></h5>
                <p class="card-text">Discription: <%= book.description %></p>
                <p class="card-text">Author: <%=  book.author %></p>
            </div>
            <ul class="list-group list-group-flush">
                <% if(book.comments.length){ %> 

                    <% book.comments.forEach(comment => { %> 

                       <li class="list-group-item"><%= comment.text %>
                            <form action="/dashboard/books/<%= book._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" value="Delete" class="card-link float-right" >
                            </form>
                       </li>

                    <% })  %> 
                <% } else{ %>   

                       <li class="list-group-item text-center">No comments yet</li>

                 <% } %> 
         
            </ul>
            <div class="card-body">
                <form method="POST" action="/dashboard/books/<%= book._id %>/comments">
                    <div class="form-group row d-flex justify-content-center" >
                        <input type="text" class="form-control" name="text">
                        <input style="margin-top: 5px;" type="submit" class="btn btn-primary" value="Add comment">
                    </div>
                </form>
            </div>

           
        </div>
    </div>
    

    


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>